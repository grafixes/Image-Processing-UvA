%% Image Rotation
% Performs a rotation transformation with a 
% specified angle on a provided image around
% its center.
function rotatedImage = rotateImage(image, angle, interpolationMethod)
    
    [m, n] = size(image);
    phi = deg2rad(angle);
    center = round(imSize/2);
    
    R = rot(phi);
    [X, Y] = meshgrid(1:n, 1:m);
    indices = [X(:)'; Y(:)'; ones(1, m*n)];
    rotatedIndices = trans(center) * (R * (indices * trans(-center)));
    rotatedImage = zeros(m, n);
    
    for i = 1:(m*n)
        x = floor(rotatedIndices(1, i));
        y = floor(rotatedIndices(2, i));
        rotatedImage(y, x) = pixelValue(image, indices(1, i), in);
    end
    1,1 -> 0,1
    loop through rotated space -> rotatedImage(0,1) -> pixelValue(org(0),org(1)) 
end